<div class="max-w-md">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
  </div>
  <div class="my-4">
    {% if section.settings.butn_url == blank %}
      {% assign button_url = shop.secure_url %}
    {% else %}
      {% assign button_url = section.settings.butn_url %}
    {% endif %}
    <a
      href="{{ button_url }}"
      class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white"
    >
      {{- section.settings.button_label -}}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "404 page heading title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "label": "404 page subtext title",
      "default": "The page that you're looking for is not found"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Back to Home Page"
    },
    {
      "type": "url",
      "id": "butn_url",
      "label": "Button URL"
    }
  ]
}
{% endschema %}
